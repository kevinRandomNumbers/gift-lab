<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>
    <%= list.title %>
  </title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">

  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">

        <div class="card shadow-sm">
          <div class="card-header bg-dark text-white text-center">
            <h1 class="h4 mb-0">
              List: <%= list.title %>
            </h1>
          </div>

          <div class="container mb-3">
            <form action="/lists/<%= list.id %>/items/add" method="POST">
              <div class="input-group mb-3 mt-2">
                <span class="input-group-text" id="inputGroup-sizing-default">Add item:</span>
                <input type="text" name="new_item" class="form-control" aria-label="Sizing example input"
                  aria-describedby="inputGroup-sizing-default" required>
              </div>
              <div class="col-12">
                <button type="submit" class="btn btn-secondary">Add to list</button>
              </div>
            </form>
          </div>

          <ul class="list-group list-group-flush">
            <% if (items.length===0) { %>
              <li class="list-group-item text-center text-muted">
                This list is empty.
              </li>
              <% } else { %>
                <% items.forEach(item=> { %>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    <strong>
                      <%= item.item_name %>
                    </strong>
                    <form action="/delete/<%=item.item_name%>/<%=list.id%>" method="POST" style="margin:0;">
                            <button type="submit" class="btn btn-sm btn-outline-danger rounded-circle"
                              title="Delete item">
                              üóëÔ∏è
                            </button>
                          </form>
                  </li>
                  <% }) %>
                    <% } %>
          </ul>

        </div>

        <div class="text-center mt-3">
          <a href="/dashboard" class="btn btn-outline-secondary btn-sm">
            Back to dashboard
          </a>
        </div>

      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>