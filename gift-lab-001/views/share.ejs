<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= list.title %> - Shared List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body class="d-flex flex-column h-100">

<%- include('partials/header', { currentUser: null }) %>

<main class="flex-shrink-0">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">

        <div class="card card-festive">
          <div class="card-header card-header-festive text-center">
            <h1 class="h4 mb-0">
              <i class="bi bi-share-fill"></i> <%= list.title %>
            </h1>
            <small class="text-white-50">Shared gift list</small>
          </div>

          <ul class="list-group list-group-flush">
            <% if (items.length === 0) { %>
            <li class="list-group-item text-center text-muted py-4">
              <i class="bi bi-inbox fs-1 d-block mb-2"></i>
              This list is empty.
            </li>
            <% } else { %>
            <% items.forEach(item => { %>
            <li class="list-group-item d-flex justify-content-between align-items-center <%= item.bought ? 'bg-light' : '' %>">
              <span class="<%= item.bought ? 'text-decoration-line-through text-muted' : '' %>">
                <strong><%= item.item_name %></strong>
              </span>
              <% if (!item.bought) { %>
              <form action="/share/<%= list.share_token %>/items/<%= item.id %>/buy" method="POST" class="m-0">
                <button type="submit" class="btn btn-sm btn-outline-success rounded-circle" title="Mark as bought">
                  <i class="bi bi-bag-check"></i>
                </button>
              </form>
              <% } else { %>
              <span class="badge bg-success">
                <i class="bi bi-check-circle"></i> Bought
              </span>
              <% } %>
            </li>
            <% }) %>
            <% } %>
          </ul>

        </div>

      </div>
    </div>
  </div>
</main>

<%- include('partials/footer') %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
