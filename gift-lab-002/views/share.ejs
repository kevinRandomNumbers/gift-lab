<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= list.title %> - Shared List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body class="d-flex flex-column h-100">

<%- include('partials/header', { currentUser: null }) %>

<main class="flex-shrink-0">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">

        <div class="card card-festive">
          <div class="card-header card-header-festive text-center">
            <h1 class="h4 mb-0">
              <i class="bi bi-share-fill"></i> <%= list.title %>
            </h1>
            <small class="text-white-50">Shared gift list</small>
          </div>

          <ul class="list-group list-group-flush">
            <% if (items.length === 0) { %>
            <li class="list-group-item text-center text-muted py-4">
              <i class="bi bi-inbox fs-1 d-block mb-2"></i>
              This list is empty.
            </li>
            <% } else { %>
            <% items.forEach(item => { %>
            <li class="list-group-item d-flex justify-content-between align-items-center <%= item.bought ? 'bg-light' : '' %>">
              <span class="<%= item.bought ? 'text-decoration-line-through text-muted' : '' %>">
                <!-- ! Deliberately XSS vulnerable -->
                <strong><%- item.item_name %></strong>
              </span>
              <% if (!item.bought) { %>
              <form action="/delete/<%= item.item_name %>/<%= list.id %>" method="POST" class="m-0">
                <button type="submit" class="btn btn-sm btn-outline-success rounded-circle" title="Mark as bought">
                  <i class="bi bi-bag-check"></i>
                </button>
              </form>
              <% } else { %>
              <span class="badge bg-success">
                <i class="bi bi-check-circle"></i> Bought
              </span>
              <% } %>
            </li>
            <% }) %>
            <% } %>
          </ul>

        </div>

      </div>
    </div>
  </div>
</main>

<%- include('partials/footer') %>

<% if (xssBypassDetected) { %>
<!-- XSS Bypass Detection Modal -->
<div class="modal fade" id="xssModal" tabindex="-1" data-bs-backdrop="static">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content border-danger">
      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title">
          <i class="bi bi-exclamation-triangle-fill"></i> XSS Bypass Detected!
        </h5>
      </div>
      <div class="modal-body text-center py-4">
        <i class="bi bi-bug-fill text-danger" style="font-size: 4rem;"></i>
        <h4 class="mt-3">Filter Bypassed!</h4>
        <p class="text-muted mb-0">A malicious payload bypassed the XSS filter.</p>
        <p class="text-muted">The filter only ran once, allowing nested payloads to slip through.</p>
        <p class="text-muted"><%=flag%></p>
      </div>
      <div class="modal-footer justify-content-center">
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">I understand</button>
      </div>
    </div>
  </div>
</div>
<% } %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<% if (xssBypassDetected) { %>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    new bootstrap.Modal(document.getElementById('xssModal')).show();
  });
</script>
<% } %>
</body>
</html>
